# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
shell_variant = bash

# YAML files (Kubernetes manifests, Helm charts)
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown documentation
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# Makefiles require tabs
[Makefile]
indent_style = tab
indent_size = 4

[Makefile.*]
indent_style = tab
indent_size = 4

# Helm templates
[*.tpl]
indent_style = space
indent_size = 2

# Go files (for testing tools like KUTTL)
[*.go]
indent_style = tab
indent_size = 4

# Terraform files (for EKS provisioning)
[*.{tf,tfvars}]
indent_style = space
indent_size = 2

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 2

# Git configuration files
[.git*]
indent_style = space
indent_size = 2
